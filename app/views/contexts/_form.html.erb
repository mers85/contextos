<%= form_with model: @context, local: true do |form|%>

  <% if @context.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@context.errors.count, "error") %> prohibited
        this context from being saved:
      </h2>
      <ul>
        <% @context.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.select :category_id, options_for_select(@categories), :prompt => 'Select one category' %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
