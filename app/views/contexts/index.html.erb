<div class='container'>
  <div class='row'>
    <div class="col-sm-12">
      <div class="mt-4 mb-4">
        <h1>Listing contexts <%= link_to 'New context', new_context_path, class:"btn btn-outline-primary btn-sm" %></h1>
      </div>
      <div class="card-deck">
        <% @contexts.each do |context| %>
          <%= render 'context_card', context: context  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
