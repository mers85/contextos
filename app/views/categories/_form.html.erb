
<%= form_with model: @category, local: true do |form| %>
  <% if @category.errors.any? %>
   <div id="error_explanation">
     <h2>
       <%= pluralize(@category.errors.count, "error") %> prohibited
       this category from being saved:
     </h2>
     <ul>
       <% @category.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
  <% end %>


  <div style="margin: 33px;padding:-13px">
    <div class="form-group" >
      <%= form.label :name %><br>
      <%= form.text_field :name, class: "form-control rounded-0" %>
    </div>

    <div class="form-group shadow-textarea">
      <%= form.label :description %><br>
      <%= form.text_area :description, class: "form-control z-depth-1", rows: 7 %>
    </div>

    <p>
      <%= form.submit @submit, :class => "btn btn-outline-primary btn-sm disabled" %>
    </p>
  </div>
<% end %>
