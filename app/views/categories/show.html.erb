<div class="container mt-4 mb-4 bg-light" >
  <div class="row justify-content-between">
    <div class="col-sm-6 col-md-12">
      <h1><%= @category.name %></h1>
      <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-outline-primary btn-sm mb-3" %>
    </div>
  </div>
</div>

<div class="container mt-4 mb-4" >
  <div class="row">
    <div class="col-md-12">
      <h3> Contexts under this category </h3>
        <div class="card-deck">
          <% if @category.contexts.published.empty? %>
            <p> There are no contexts under this category</p>
          <% else %>
            <% @category.contexts.published.each do |context| %>
              <%= render 'contexts/context_card', context: context  %>
            <%end%>
          <% end %>
      </div>
    </div>
  </div>
</div>
