<div class="container">
  <div class='row'>
    <div class="col-sm-12">
      <div class="mt-4 mb-4">
        <h1>Listing categories <%= link_to 'New category', new_category_path, class: "btn btn-outline-primary btn-sm" %></h1>
      </div>
    </div>
  </div>


  <div class="row" >
    <div class="col-sm-12">
      <% @categories.each do |category| %>
        <div class="card mb-4">
        <h5 class="card-header"><%= category.name %></h5>
          <div class="card-body">
            <p class="card-text"><%= category.description %></p>
            <%= link_to 'Show', category_path(category),class: "btn btn-outline-primary btn-sm" %>
            <%= link_to 'Edit', edit_category_path(category), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to 'Destroy', category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>



</div>
