<% if current_user && @context.user_id == current_user.id %>
  <%= form_with(model: [ @context, @information_post.id ? @information_post : @context.information_posts.build ], local: true) do |form| %>
    <% if @information_post.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@information_post.errors.count, "error") %> prohibited
          this information from being saved:
        </h2>
        <ul>
          <% @information_post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin: 33px;padding:-13px">
      <div class="form-group" >
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control rounded-0" %>
      </div>

      <div class="form-group shadow-textarea">
        <%= form.label :summary %><br>
        <%= form.text_area :summary, class: "form-control z-depth-1", rows: 7 %>
      </div>

      <div class="form-group shadow-textarea">
        <%= form.label :url %><br>
        <%= form.text_field :url, class: "form-control z-depth-1", rows: 7 %>
      </div>

      <p>
        <%= form.submit @submit %>
      </p>
    </div>
  <% end %>
<% end %>
