<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Forgot Password?</h2>
                  <p>You can reset your password here.</p>
                  <div class="panel-body">

                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                      <%= devise_error_messages! %>

                      <div class="form-group">
                        <div class="input-group mb-3">
                          <div class="input-group-prepend">
                            <label class="input-group-text"><i class="fa fa-envelope"></i></label>
                          </div>
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
                        </div>
                      </div>
                      <div class="form-group">
                        <%= f.submit "Reset Password", class: "btn btn-lg btn-secondary btn-block" %>
                      </div>
                    <% end %>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-3">
                          <p><%= link_to "Sign up", new_registration_path(resource_name)%></p>
                        </div>
                        <div class="col-sm-3">
                          <p><%= link_to "Login", new_session_path(resource_name)%></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
	</div>
</div>
